<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    .form-group {
      width: fit-content;
    }

  </style>
</head>

<body>
  <template id="property-list">
    <div class="info-container">
      <div class="container">
        <div class="row">
          <div class="col">
            <p class="name"></p>
          </div>
          <div class="col">
            <p class="itemType"></p>
          </div>
          <div class="col">
            <p class="status"></p>
          </div>
        </div>
      </div>

    </div>
  </template>
  <%- include('../Components/navbar.ejs') %>
  <div class="d-flex" id="wrapper">
    <%- include('../Components/sideBar.ejs') %>
    <div id="page-content-wrapper">
      <h2>List of properties <%= pageTitle %> </h2>
      <div class="form-group">
        <input type="text" class="form-control" id="search" placeholder="Search...">
      </div>
      <!-- property table -->
      <div id="property-list-container" class="list-container"></div>

      <!-- Central Modal Small -->
      <div class="modal fade" id="centralModalSm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">

        <!-- Change class .modal-sm to change the size of the modal -->
        <div class="modal-dialog modal-md" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title w-100" id="myModalLabel">Modal title</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary btn-sm" id="btn-move">change warehouse</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    import { generatePropertyManagementList } from '/generatePropertyManagementList.js'
    var propertyList = <%- JSON.stringify(propertyList) %>;
    var warehouseList = <%- JSON.stringify(warehouseList) %>;

    console.log('property list: ', propertyList)
    console.log('warehouse list: ', warehouseList)

    const propertyListTemplate = document.querySelector('#property-list')

    generatePropertyManagementList(propertyList, warehouseList, 'property-list-container')
  </script>
</body>

</html>